@using System.Globalization
@using System.Net
@using CommonMark
@using Microsoft.AspNetCore.Http.Extensions
@using WebApp.Extensions
@using WebApp.Resources
@model object

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@section head {
    <meta name="og:image" content="@Url.AbsoluteContent("/img/logo.png")" />
}

<section class="faq">
    <div class="container">
        <div class="row content article">
            <div class="col-lg-12">
                <h1>FAQ</h1>

                <h2>@Strings.FaqRegistration</h2>
                @Html.Raw(CommonMarkConverter.Convert(Strings.FaqRegistrationAnswer))

                <h2>@Strings.FaqHashrate</h2>
                @Html.Raw(CommonMarkConverter.Convert(Strings.FaqHashrateAnswer))

                <h2 id="payments">@Strings.FaqPayouts</h2>
                @Html.Raw(CommonMarkConverter.Convert(Strings.FaqPayoutsAnswer))

                <h2 id="payments">@Strings.FaqPayouts2</h2>
                @Html.Raw(CommonMarkConverter.Convert(Strings.FaqPayouts2Answer))

                <h2 id="solo-mining">@Strings.FaqSoloMining</h2>
                @Html.Raw(CommonMarkConverter.Convert(Strings.FaqSoloMiningAnswer))

                <h2>@Strings.FaqAPI</h2>
                @Html.Raw(CommonMarkConverter.Convert(Strings.FaqAPIAnswer))
            </div>
        </div>
    </div>
</section>
