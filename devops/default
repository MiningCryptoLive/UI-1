upstream api {
    server 127.0.0.1:8080;
}

server {
        root /var/www/dist;

        index index.html index.htm index.nginx-debian.html;

        server_name _ etc-solo.com;

        location / {
                try_files $uri $uri/ =404;
        }

        location /api {
                proxy_pass http://api;
          }
    
    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/etc-solo.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/etc-solo.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
    if ($host = etc-solo.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen 80 default_server;
        listen [::]:80 default_server;

        server_name _ etc-solo.com;
    return 404; # managed by Certbot


}

upstream api {
    server 127.0.0.1:4000;
}

server {
        root /var/www/raven;

        index index.html index.htm index.nginx-debian.html;

        server_name _ raven-solo.com;

        location / {
                try_files $uri $uri/ =404;
        }

        location /api {
                proxy_pass http://api;
          }

}